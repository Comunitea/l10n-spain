<odoo>
    <record id="view_move_form_inherit_account_l10n_es_aeat_mod592" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                position="after">
                <field name="product_plastic_tax_weight" optional="hide"/>
                <field name="product_plastic_weight_non_recyclable" optional="hide"/>
                <field name="product_plastic_type_key" optional="hide" />
                <field name="product_plastic_concept_manufacturer" optional="hide"/>
                <field name="product_plastic_concept_acquirer" optional="hide"/>
                <field name="product_plastic_tax_regime_manufacturer" optional="hide"/>
                <field name="product_plastic_tax_regime_acquirer" optional="hide"/>
                <!-- <field name="product_plastic_tax_description" optional="hide"/> -->
                <field name="is_plastic_tax" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="total_plastic_weight" />
                <field name="total_plastic_weight_non_recyclable" />
            </xpath>
            <xpath expr="//field[@name='to_check']" position="after">
                <field name="mod592_mapped" />
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit_account_l10n_es_aeat_mod592" model="ir.ui.view">
        <field name="name">account.move.view.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="total_plastic_weight" sum="Total Plastic Weight"
                    string="Plastic Weight" optional="hide" />
                <field name="total_plastic_weight_non_recyclable"
                    sum="Total Plastic Weight Non Recyclable"
                    string="Plastic Weight Non Recyclable " optional="hide" />
            </xpath>
        </field>
    </record>
</odoo>
